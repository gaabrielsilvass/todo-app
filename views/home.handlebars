{{#if tarefas}}

<main>
    <section class="tarefas">
        {{#each tarefas}}
        <div class="tarefa">
            <form action="">
                {{#if this.completa}}
                <div class="completa">
                    <input type="checkbox" id="tarefa-{{this.id}}" checked onchange="descompletarTarefa({{this.id}})"> 
                    <label for="tarefa-{{this.id}}">{{this.descricao}}</label>
                </div>
                {{else}}
                <div>
                    <input type="checkbox" id="tarefa-{{this.id}}" onchange="completarTarefa({{this.id}})"> 
                    <label for="tarefa-{{this.id}}">{{this.descricao}}</label>
                </div>
                {{/if}}

                <button onclick="excluirTarefa({{this.id}})">
                    <img src="/imagens/X-icon.png" alt="ícone de X para excluir uma tarefa">
                </button>
            </form>
        </div>
        {{/each}}
        <div class="informaçoes">
            <p>{{quantidadeTarefasAtivas}} tarefas ativas</p>
            <div class="botoes">
                <a href="" class="active">Todas</a>
                <a href="">Ativas</a>
                <a href="">Completas</a>
            </div>

            <a href="/limparTarefas">Limpar tarefas</a>
        </div>
    </section>

    <section class="botoes">
        <a href="" class="active">Todas</a>
        <a href="">Ativas</a>
        <a href="">Completas</a>
    </section>
</main>
{{/if}}